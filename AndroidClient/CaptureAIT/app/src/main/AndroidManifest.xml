            android:screenOrientation="portrait" />
        <activity
            android:name=".view.authentication.RegisterActivity"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.authentication.LoginActivity"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />
    </application>

</manifest>