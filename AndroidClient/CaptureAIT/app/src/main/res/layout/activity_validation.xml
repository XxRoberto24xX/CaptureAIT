<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auxiliar_background"
    android:orientation="vertical"
    tools:context=".view.authentication.ValidationActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="100dp"
        android:text="ValidaciÃ³n de Correo"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/blue4"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Para poder usar su cuenta es necesario haber validaddo la direccion de correo electronico primero" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Mire la bandeja de entrada de la cuenta de correo proporcionada"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="25dp">

        <Button
            android:id="@+id/btnNewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Renviar correo"
            android:layout_marginEnd="5dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/blue4"/>

        <Button
            android:id="@+id/btnNewRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reintentar Registro"
            android:layout_marginStart="5dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/blue4"/>

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginVertical="60dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loading_dark.json"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_loop="true" />


</LinearLayout>