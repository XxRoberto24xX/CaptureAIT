<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CaptureAIT" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/blue1</item>
        <item name="colorPrimaryVariant">@color/blue2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/orange1</item>
        <item name="colorSecondaryVariant">@color/orange2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- StatusBarColor-->
        <item name="android:statusBarColor">@color/blue3</item>
